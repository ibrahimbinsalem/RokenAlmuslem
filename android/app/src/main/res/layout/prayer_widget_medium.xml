<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prayer_widget_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_prayer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="الصلاة القادمة"
        android:textColor="#E6ECF5"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_prayer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="--:--"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_prayer_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="موقعك الحالي"
        android:textColor="#A9B4C9"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_action_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/prayer_widget_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="فتح الورد"
            android:textColor="#E6ECF5"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/widget_action_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/prayer_widget_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="الأذكار"
            android:textColor="#E6ECF5"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>
